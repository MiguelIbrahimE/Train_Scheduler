{
    "name": "Rail-Scheduler",
    "image": "rail-scheduler:latest",
    "context": "..",
    "dockerFile": "Dockerfile",
  
    // Mount the whole repo
    "workspaceFolder": "/workspace",
  
    // VS Code extensions inside the container
    "customizations": {
      "vscode": {
        "extensions": [
          "ms-python.python",
          "ms-toolsai.jupyter",
          "iredelmeier.dagster-extension"
        ]
      }
    },
  
    // Forward UI ports (web) -> host
    "forwardPorts": [3000, 8888],
  
    // Start Dagster & Jupyter automatically
    "postCreateCommand": "dagster dev -m pipeline.assets & jupyter lab --ip 0.0.0.0 --port 8888 --no-browser &",
  
    // Settings overrides for container workspace
    "settings": {
      "python.defaultInterpreterPath": "/usr/local/bin/python"
    }
  }
  